<h1 class="container">All Todo lists</h1>

<% @lists.each do |list| %>
  <% if current_user == list.user || list.status == 'public' %>
    <div class="container">
      <h3><%= link_to list.title, list_path(list) %></h3>
      <h5><%= list.description %> - <%= link_to list.user.username, user_path(list.user) %></h5>
    </div>
  <% end %>
<% end %>