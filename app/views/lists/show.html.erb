<h1><%= @list.title %></h1>
<h3>List created by: <%= @list.user.username %></h3>

<div>
  <% @list.tasks.each do |task| %>
    <ul>
      <li><%= task.title %> - <%= task.description %></li>
      <% if @list.user == current_user %>
        <span><%= link_to "DONE", [task.list, task], data: { turbo_method: :delete } %></span>
      <% end %>
    </ul>
  <% end %>
</div>

<div>
  <% if @list.user == current_user %>
    <h3>Add New Task:</h3>
    <%= render "task_form" %>
  <% end %>
</div>